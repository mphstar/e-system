<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingHorizontal="24dp"
    android:layout_height="match_parent"
    tools:context=".ui.approval_page.ApprovalActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:gravity="center_vertical"
        android:id="@+id/header"

        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:src="@drawable/ic_back"
            android:contentDescription="Back" />
        <Space
            android:layout_width="12dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#2D47FE"
                android:fontFamily="@font/poppins_semibold"
                android:text="Howdy,"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#2D47FE"
                android:fontFamily="@font/poppins_semibold"
                android:text="Ndaru Samboja"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:layout_below="@id/header"
        android:orientation="vertical">
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:text="CEO"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/north_star_blue"
            android:paddingVertical="16dp"
            app:icon="@drawable/ic_approval_ceo"
            android:fontFamily="@font/poppins_medium"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:layout_height="wrap_content" />
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:text="Staff Division"
            app:cornerRadius="12dp"
            android:fontFamily="@font/poppins_medium"
            android:textAllCaps="false"
            app:backgroundTint="@color/white"
            android:textColor="@color/north_star_blue"
            app:iconTint="@color/north_star_blue"
            app:strokeWidth="1dp"
            app:strokeColor="@color/north_star_blue"
            android:paddingVertical="16dp"
            app:icon="@drawable/ic_approval_staff"

            android:textAlignment="textStart"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>