<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingVertical="12dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/title_notification"
        android:text="Approval Finished" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/file_notification"
        android:layout_height="wrap_content"
        android:text="Dokumen Anggaran Terbaru.PDF" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date_notification"
        android:text="12-October-2023" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time_notification"
        android:text="13:00 AM" />

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_marginTop="8dp"
        android:layout_height="1dp" />
</LinearLayout>