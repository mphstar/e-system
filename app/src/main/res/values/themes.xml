<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Esystem" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Esystem" parent="Base.Theme.Esystem" />

    <style name="TitleOnBoarding">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TitleSignIn">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="SubTitleSignIn">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TitleEditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="TextForSpinner">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#C6C3C3</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColorHint">#C6C3C3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_edit_text_stroke_white_fill_transparent</item>
    </style>

    <style name="TextPoppinsLight12sp">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#B5FFFFFF</item>
        <item name="fontFamily">@font/poppins_light</item>
    </style>

    <style name="TextPoppinsregular12sp">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="TextPoppinsMedium15sp6072EE">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/north_star_blue</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextBottomNav">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/north_star_blue</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="BottomNavigationText">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomNavigationText.Selected">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>